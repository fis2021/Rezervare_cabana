<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Text?>

<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.CheckBox?>
<GridPane alignment="TOP_LEFT" hgap="10" prefHeight="800" prefWidth="1200" vgap="10" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.loose.fis.sre.controllers.RentController">
    <padding>
        <Insets bottom="25.0" left="25.0" right="25.0" top="25.0" />
    </padding>
    <Text id="title-text" style="-fx-font-size : 16" text="Fill the following details to complete the rental process :" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.rowIndex="0" />

    <TextField fx:id="your_full_name" promptText="Your Full Name" GridPane.columnIndex="0" GridPane.rowIndex="1" />

    <TextField fx:id="email" promptText="Email adress" GridPane.columnIndex="0" GridPane.rowIndex="2" />

    <TextField fx:id="phone" promptText="Phone Number" GridPane.columnIndex="0" GridPane.rowIndex="3" />

    <Label text="Over 18" GridPane.columnIndex="0" GridPane.rowIndex="4" />
    <CheckBox GridPane.columnIndex="1" GridPane.rowIndex="4" />

    <Label text="Select date :" GridPane.columnIndex="0" GridPane.rowIndex="5" />
    <DatePicker GridPane.columnIndex="1" GridPane.rowIndex="5" />

    <HBox alignment="bottom_left" spacing="10"  GridPane.columnIndex="0" GridPane.rowIndex="6">
        <Button onMouseClicked="#handleRentingAction" style="-fx-font: 20 Calibri" text="Rent" prefWidth="100" textAlignment="CENTER"/>
    </HBox>


</GridPane>
