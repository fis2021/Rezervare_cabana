<GridPane alignment="TOP_LEFT" hgap="10" prefHeight="800" prefWidth="1200" vgap="10" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.loose.fis.sre.controllers.LeaveReviewController">
    <padding>
        <Insets bottom="25.0" left="25.0" right="25.0" top="25.0" />
    </padding>
    <Text id="title-text" style="-fx-font-size : 18" text="Write Review :" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.rowIndex="0" />

    <TextField promptText="Author name" prefWidth="300" GridPane.columnIndex="0" GridPane.rowIndex="1"/>

    <TextArea promptText="Write your review here" prefHeight="300" prefWidth="300" GridPane.columnIndex="0" GridPane.rowIndex="2"/>

    <HBox alignment="bottom_left" spacing="10" GridPane.columnIndex="1" GridPane.rowIndex="8">
        <Button onMouseClicked="#handleLeaveReviewAction" text="Leave Review" prefWidth="150" textAlignment="CENTER"/>
    </HBox>

</GridPane>
