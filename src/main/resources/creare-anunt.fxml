    <TextField fx:id="nume_proprietar" GridPane.columnIndex="1" GridPane.rowIndex="1" />

    <Label text="Nume proprietate:" GridPane.columnIndex="0" GridPane.rowIndex="2" />

    <TextField fx:id="nume_proprietate" GridPane.columnIndex="1" GridPane.rowIndex="2" />

